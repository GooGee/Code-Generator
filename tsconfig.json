{
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "outFile": "index.js",
        "sourceMap": true,
        "strict": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/model/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
        "mode": "file",
        "out": "docs/model"
    }
}